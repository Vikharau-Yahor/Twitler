<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Twitter main page</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-fixed-top navbar-top-style">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Twitler", "Main", "User", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Exit", "Logout", "Account")</li>
            </ul>
        </div>
    </div>
</div>
<div class="container main-container">
    @RenderBody()
</div>
<div align="center" class="navbar navbar-fixed-bottom navbar-bottom-style">
    <ul class="breadcrumb">
        <li class="active"><a href="https://github.com/Vikharau-Yahor/Twitler">On Github</a></li>
        <li>@Html.ActionLink("Main", "Main", "User")</li>
    </ul>
</div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
